<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/introduction" />

	<TextView android:layout_width="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/textView2"
		android:layout_height="wrap_content" android:text="@string/works_with_title"></TextView>
	<TextView android:layout_width="wrap_content" android:id="@+id/textView3"
		android:layout_height="wrap_content" android:text="@string/works_with"></TextView>

	<TextView android:layout_width="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/textView4"
		android:layout_height="wrap_content" android:text="@string/useless_with_title"></TextView>
	<TextView android:layout_width="wrap_content" android:id="@+id/textView5"
		android:layout_height="wrap_content" android:text="@string/useless_with"></TextView>

	<TextView android:layout_width="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/textView6"
		android:layout_height="wrap_content" android:text="@string/status_title"></TextView>

	<ScrollView android:layout_width="match_parent"
		android:layout_height="wrap_content" android:id="@+id/scrollView1"
		android:layout_gravity="center_horizontal">

		<TableLayout android:layout_width="fill_parent"
			android:id="@+id/tableLayout1" android:layout_height="wrap_content">

			<org.projectvoodoo.otarootkeeper.ui.StatusRow
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:id="@+id/superuser_app_installed">
				<TextView android:id="@+id/textView7"
					android:layout_height="wrap_content" android:text="@string/superuser_apk_installed"
					android:layout_width="wrap_content"></TextView>
			</org.projectvoodoo.otarootkeeper.ui.StatusRow>

			<org.projectvoodoo.otarootkeeper.ui.StatusRow
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:id="@+id/rooted">
				<TextView android:id="@+id/textView8"
					android:layout_height="wrap_content" android:text="@string/device_rooted"
					android:layout_width="wrap_content"></TextView>
			</org.projectvoodoo.otarootkeeper.ui.StatusRow>

			<org.projectvoodoo.otarootkeeper.ui.StatusRow
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:id="@+id/root_granted">
				<TextView android:id="@+id/textView9"
					android:layout_height="wrap_content" android:text="@string/permission_granted"
					android:layout_width="wrap_content"></TextView>
			</org.projectvoodoo.otarootkeeper.ui.StatusRow>

			<org.projectvoodoo.otarootkeeper.ui.StatusRow
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:id="@+id/fs_supported">
				<TextView android:id="@+id/textView10"
					android:layout_height="wrap_content" android:text="@string/fs_supported"
					android:layout_width="wrap_content"></TextView>
			</org.projectvoodoo.otarootkeeper.ui.StatusRow>

			<org.projectvoodoo.otarootkeeper.ui.StatusRow
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:id="@+id/su_protected">
				<TextView android:id="@+id/textView11"
					android:layout_height="wrap_content" android:text="@string/su_protected"
					android:layout_width="wrap_content"></TextView>
			</org.projectvoodoo.otarootkeeper.ui.StatusRow>

		</TableLayout>
	</ScrollView>
	<ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/scrollView2">
		<LinearLayout android:layout_gravity="center_horizontal" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="fill_parent">
			<Button android:id="@+id/button_protect_root" android:text="@string/protect_root" android:tag="protect" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
			<Button android:id="@+id/button_backup_root" android:text="@string/backup_root" android:tag="backup" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
			<Button android:id="@+id/button_restore_root" android:text="@string/restore_root" android:tag="restore" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
			<Button android:id="@+id/button_delete_backup" android:text="@string/delete_backup" android:tag="delete_backup" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
